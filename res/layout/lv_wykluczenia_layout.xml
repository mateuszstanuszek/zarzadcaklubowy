<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/llWykluczenie">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
         <TextView
                android:id="@+id/tvWykluczenieZawodnik"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="ImiÄ™ Nazwisko"
				android:layout_span="3"
            	android:padding="5dip" 
            	android:textSize="@dimen/text_size_high_medium" />
         
           <TextView
                android:id="@+id/tvWykluczeniePoIlu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:gravity="center"
                android:text="czerwona"
				android:layout_span="3"
            	android:padding="5dip" 
            	android:textSize="@dimen/text_size_high_medium"/>

            <TextView
                android:id="@+id/tvWykluczenieAktywne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="T"
				android:layout_span="3"
            	android:padding="5dip" 
            	android:textSize="@dimen/text_size_high_medium"/>
            <TextView
                android:id="@+id/tvWykluczenieIloscMeczow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="5"
				android:layout_span="3"
            	android:padding="5dip" 
            	android:textSize="@dimen/text_size_high_medium"/>


    

            <CheckBox
                android:id="@+id/chbWykluczenie"
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
