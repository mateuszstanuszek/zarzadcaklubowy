<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center"
            android:text="k"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:gravity="center"
            android:text="gospodarz"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center"
            android:text="wynik"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:gravity="center"
            android:text="gość"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="center"
            android:text="data"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="godz."
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ListView
        android:id="@+id/lvTerminarz"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:focusable="true">
    </ListView>

    <LinearLayout
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:orientation="horizontal" >

        <Button
                android:id="@+id/btTerminarzDodajMecz"
                android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                android:text="Dodaj mecz"
                android:drawableTop="@drawable/add128_icon" />

            <Button
                android:id="@+id/btTerminarzWprowadzWyniki"
                android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                android:text="Wprowadź wyniki" 
                android:drawableTop="@drawable/edytuj_icon"/>
             <Button
                android:id="@+id/btTerminarzUsun"
                android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                android:text="Usuń zaznaczone" 
                android:drawableTop="@drawable/usun_icon"/>

    </LinearLayout>

</LinearLayout>