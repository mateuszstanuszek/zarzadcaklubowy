<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Zawodnicy" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvZawodnicyImie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="---"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvZawodnicyNazwisko"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="---"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="PESEL:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvZawodnicyPesel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="---"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Data ur.:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvZawodnicyData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="---"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Adres:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvZawodnicyAdres"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="---"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Telefon:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvZawodnicyTelefon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="---"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Email:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvZawodnicyEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="---"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Pozycja:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvZawodnicyPozycja"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="---"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" 
            >
            
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                	android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                	android:gravity="center"
                	android:text="L.meczów"
                	android:textSize="18sp" />
                <TextView
                	android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                	android:gravity="center"
                	android:text="L.minut"
                	android:textSize="18sp" />
                <TextView
                	android:layout_width="0dp"
               		android:layout_height="wrap_content"
                	android:layout_weight="1"
                	android:gravity="center"
                	android:text="Bramki"
                	android:textSize="18sp" />
                <TextView
                	android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                	android:gravity="center"
                	android:text="Ż.kartki"
                	android:textSize="18sp" />
                <TextView
                	android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                	android:gravity="center"
                	android:text="Cz.kartki"
                	android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                
                <TextView
	                android:id="@+id/tvZawodnicyMecze"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:text="-"
	                android:textSize="18sp" />
                <TextView
	                android:id="@+id/tvZawodnicyMinuty"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:text="-"
	                android:textSize="18sp" />
                <TextView
	                android:id="@+id/tvZawodnicyBramki"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:text="-"
	                android:textSize="18sp" />
                <TextView
	                android:id="@+id/tvZawodnicyZKartki"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:text="-"
	                android:textSize="18sp" />
                <TextView
	                android:id="@+id/tvZawodnicyCzKartki"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:text="-"
	                android:textSize="18sp" />
                
            </TableRow>

        </TableLayout>

        <Spinner
            android:id="@+id/spinnerZawodnicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/lvZawodnicyStatystyki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btZawodnicyPoprzedni"
                android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                android:text="Poprzedni" />

            <Button
                android:id="@+id/btZawodnicyDodaj"
                android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                android:text="Dodaj" />

            <Button
                android:id="@+id/btZawodnicyEdytuj"
                android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                android:text="Edytuj" />

            <Button
                android:id="@+id/btZawodnicyUsun"
                android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                android:text="Usuń" />
            <Button
                android:id="@+id/btZawodnicyNastepny"
                android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                android:text="Następny" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>