<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/llStatystykiZawodnikWiersz">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <ImageView
            android:id="@+id/imgZawodnikStatystyka"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/pilka48_icon" />
        <TextView
            android:id="@+id/tvStatystykiZawodnikMinuta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="left|center_vertical"
            android:text="0"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvStatystykiZawodnik"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="statystyka"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
