<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Imie"
                android:textSize="@dimen/text_size_high"

                android:layout_span="3"
            	android:padding="18dip" 
            	android:background="#232323"
				/>

            <TextView
        		android:id="@+id/tvDzialaczeImie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
               	android:layout_span="3"
            	android:padding="18dip" 
            	android:background="#3F3F3F"
                android:textSize="@dimen/text_size_high" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nazwisko"
               android:textSize="@dimen/text_size_high"
               android:layout_span="3"
            	android:padding="18dip" 
            	android:background="#232323"/>

            <TextView
        		android:id="@+id/tvDzialaczeNazwisko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_high"
                android:textColor="@color/black"
                android:layout_span="3"
            	android:padding="18dip" 
            	android:background="#3F3F3F"
                 />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adres"
               android:textSize="@dimen/text_size_high" 
          		 style="@style/grey_more_item_style"/>


                  <TextView
        			android:id="@+id/tvDzialaczeAdres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_high"
                    style="@style/grey_less_item_style"
                    />
                  
                          <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="email"
                android:layout_span="3"
               	android:textColor="@color/black"
            	android:background="#3F3F3F"
                android:textSize="@dimen/text_size_high_medium" 
                android:textStyle="bold"   />
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="telefon"
               	android:layout_span="3"
               	android:textColor="@color/black"
            	android:background="#3F3F3F"
                android:textSize="@dimen/text_size_high_medium"
                android:textStyle="bold"  />

            
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            
            <TextView
                android:id="@+id/tvDzialaczeEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="---"
                android:layout_span="3"
            	android:background="#3F3F3F"
                android:textSize="@dimen/text_size_high_medium"  />

            <TextView
                android:id="@+id/tvDzialaczeTelefon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="---"
               	android:layout_span="3"
            	android:background="#3F3F3F"
                android:textSize="@dimen/text_size_high_medium"   />
        </LinearLayout>
        
                <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="pesel"
                android:layout_span="3"
               	android:textColor="@color/black"
            	android:background="#3F3F3F"
                android:textSize="@dimen/text_size_high_medium" 
                android:textStyle="bold"   />
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="stanowisko"
               	android:layout_span="3"
               	android:textColor="@color/black"
            	android:background="#3F3F3F"
                android:textSize="@dimen/text_size_high_medium"
                android:textStyle="bold"  />

            
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            
            <TextView
                android:id="@+id/tvDzialaczePESEL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="---"
                android:layout_span="3"
            	android:background="#3F3F3F"
                android:textSize="@dimen/text_size_high_medium"  />

            <TextView
                android:id="@+id/tvDzialaczeStanowisko"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="---"
               	android:layout_span="3"
            	android:background="#3F3F3F"
                android:textSize="@dimen/text_size_high_medium"   />
        </LinearLayout>
        
                  


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
            android:orientation="horizontal" >


                       <Button
                android:id="@+id/btDzialaczePoprzedni"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Poprzedni" 
                android:drawableTop="@drawable/back_icon"/>

            <Button
                android:id="@+id/btDzialaczeDodaj"
                android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                android:text="Dodaj" 
                android:drawableTop="@drawable/add_icon"/>

            <Button
                android:id="@+id/btDzialaczeEdytuj"
                android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                android:text="Edytuj" 
                android:drawableTop="@drawable/edytuj64_icon"/>

            <Button
                android:id="@+id/btDzialaczeUsun"
                android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                android:text="Usuń" 
                android:drawableTop="@drawable/delete_icon"/>
            <Button
                android:id="@+id/btDzialaczeNastepny"
                android:layout_width="0dp"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                android:text="Następny"
                android:drawableTop="@drawable/next_icon" />
        </LinearLayout>
    </LinearLayout>
    

</RelativeLayout>
